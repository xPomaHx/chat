extends layout

block content
  h2 Money

  h3 имя 
    span=user.username
  h2 денег 
    span=user.money
  .container
  .row
    .col-md-4.col-md-offset-4
      .credit-card-div
        .panel.panel-default
          .panel-heading
            .row
              .span12
                input.form-control(type='text', placeholder='Enter Card Number')
            .row
              .span3
                span.help-block.text-muted.small-font  Expiry Month
                input.form-control(type='text', placeholder='MM')
              .span3
                span.help-block.text-muted.small-font  Expiry Year
                input.form-control(type='text', placeholder='YY')
              .span3
                span.help-block.text-muted.small-font  CCV
                input.form-control(type='text', placeholder='CCV')
              .span3
                img.img-rounded(src='http://bootstraptema.ru/snippets/form/2016/form-card/card.png')
            .row
              .span12.pad-adjust
                input.form-control(type='text', placeholder='Name On The Card')
            .row
              .span12.pad-adjust
                input.btn.btn-warning.btn-block(type='submit', value='PAY NOW' ,@click.prevent="onAddMoney()")
